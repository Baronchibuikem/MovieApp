<% include partials/head.ejs %>
<div id="hero-image">
    <h1 id="hero-title"><%= title %></h1>
</div>

<div class="container">
    <div class="row pb-3">
        <% for (var i = 0; i < movies.length; i++) { %>
        <div class="col-md-4 ">

            <a href="/star_wars_episode/<%= movies[i].episode_number %>">

                <img src="/images/<%= movies[i].poster %>" class="img-responsive img-fluid w-100 pt-5">

                <div class="text-capitalise ">
                    <h6><%= movies[i].title %></h6>
                    <h6>View More <i class="fa fa-arrow-right"></i></h6>
                </div>

            </a>

        </div>
        <% } %>
    </div>
</div>

<% include partials/footer.ejs %>
<% include partials/end.ejs %>